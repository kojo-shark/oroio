{
  "name": "oroio-desktop",
  "version": "1.0.0",
  "description": "oroio Desktop - Factory Droid API Key Manager",
  "main": "dist/main/index.js",
  "author": "notdp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/notdp/oroio.git"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"sleep 2 && USE_DEV_SERVER=true electron .\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "cd ../web && npm run dev",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "cd ../web && npm run build",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-store": "^10.0.0",
    "menubar": "^9.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "concurrently": "^9.1.2",
    "electron": "^33.4.0",
    "electron-builder": "^26.0.0",
    "typescript": "^5.7.3"
  },
  "build": {
    "appId": "io.oroio.desktop",
    "productName": "oroio",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "../web/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../web/dist",
        "to": "web"
      },
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "../assets/icon.icns",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "icon": "../assets/icons",
      "artifactName": "${productName}-${version}-x64.${ext}"
    },
    "win": {
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}-x64.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-${version}-x64.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
